<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_whiteF7"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="33dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秋实"
            android:textColor="@color/base_222222"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="15611823654"
            android:textColor="@color/base_666"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_FFFFFF"
        android:paddingBottom="10dp"
        android:paddingLeft="33dp"
        android:paddingTop="10dp"
        android:text="杭州市西湖区"
        android:textColor="@color/base_666"
        android:textSize="14sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/base_whiteF7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_FFFFFF"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/change_address"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="修改地址"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>

        </RelativeLayout>

        <View style="@style/base_line_1px_marginLeft_12dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/base_whiteF7"/>

        <RelativeLayout
            android:id="@+id/wuyegonggao"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="物业公告"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>
        </RelativeLayout>

        <View style="@style/base_line_1px_marginLeft_12dp"/>

        <RelativeLayout
            android:id="@+id/shuidian"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的水电费"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/base_whiteF7"/>


        <RelativeLayout
            android:id="@+id/baoxiu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="去报修"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>
        </RelativeLayout>

        <View style="@style/base_line_1px_marginLeft_12dp"/>

        <RelativeLayout
            android:id="@+id/my_baoxiu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的报修"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>
        </RelativeLayout>

        <View style="@style/base_line_1px_marginLeft_12dp"/>

        <RelativeLayout
            android:id="@+id/tousu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="投诉物业"
                android:textColor="@color/base_666"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/person_icon_arrow_right"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@color/base_FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/base_FF2266"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>